{% extends '::base.html.twig' %}

{% block body -%}
    <h1>LISTE DES LIVRES</h1>

    <table class="records_list" border="1" width="60%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Langue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('book_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.auteur }}</td>
                <td>{{ entity.langue }}</td>
                <td width="15%">               
                        <a href="{{ path('book_show', { 'id': entity.id }) }}">detailler</a>                              
                        <a href="{{ path('book_edit', { 'id': entity.id }) }}">editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('book_new') }}">
                Nouveau
            </a>
        </li>
    </ul>
    {% endblock %}
